{
    "manifest_version": 3,
    "name": "Chrome Wasm Extension",
    "short_name": "Chrome Wasm Extension",
    "description": "",
    "version": "1.0.0",
    "author": "Berrigan",
    "minimum_chrome_version": "110",
    "offline_enabled": true,
    "action": {},
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    // "background": {
    //     "type": "module",
    //     "service_worker": "js/background.js"
    // },
    "permissions": [
        "tabs",
        "alarms",
        "scripting"
    ],
    "host_permissions": [
        "*://*/*",
        "file:///*/*"
    ],
    "content_scripts": [
        {
            "run_at": "document_end",
            "all_frames": false,
            "matches": [
                "*://*/*"
            ],
            "js": [
                "js/dist/better_spider_content.bundle.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "*://*/*"
            ],
            "resources": [
                "js/dist/*.wasm",
                "js/*.css"
            ]
        }
    ]
}